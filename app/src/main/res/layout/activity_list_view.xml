<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mylhyl.circledialog.sample.list.ListViewActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title=" ">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="菜单框"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <android.support.v7.widget.ActionMenuView
            android:id="@+id/toolbar_actionMenuView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="right"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/top_left"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="过滤"/>

        <Button
            android:id="@+id/top_center"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:text="中间"/>

        <Button
            android:id="@+id/top_right"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="功能"/>
    </LinearLayout>

    <Button
        android:id="@+id/top_center1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:text="显示"/>

    <Button
        android:id="@+id/top_left1"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginLeft="30dp"
        android:text="显示左"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/left_top"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="左上"/>


            <Button
                android:id="@+id/left_center"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_centerVertical="true"
                android:text="左中"/>

            <Button
                android:id="@+id/left_bottom"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:text="左下"/>
        </RelativeLayout>

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/right_top"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginTop="28dp"
                android:text="右上"/>


            <Button
                android:id="@+id/right_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/right_top"
                android:text="右中"/>

            <Button
                android:id="@+id/right_center1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_below="@+id/right_center"
                android:text="右中下"/>

            <Button
                android:id="@+id/right_bottom"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_alignParentBottom="true"
                android:text="右下"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bottom_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下左"/>

        <Button
            android:id="@+id/bottom_center"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="下中"/>

        <Button
            android:id="@+id/bottom_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下右"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#290808"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
